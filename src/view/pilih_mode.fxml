<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tiket.controller.MainController"
            prefWidth="600" prefHeight="400">

    <VBox spacing="20" alignment="CENTER"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        
        <children>
            <Label text="SISTEM PEMESANAN TIKET BUS"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;" />

            <Label text="Pilih Mode" style="-fx-font-size: 16px;" />

            <Button fx:id="btnAdmin"
                    text="Mode Admin"
                    onAction="#handleAdminMode"
                    style="-fx-background-color: #1E88E5; -fx-text-fill: white;
                           -fx-font-size: 14px; -fx-padding: 10 20;" />

            <Button fx:id="btnPelanggan"
                    text="Mode User"
                    onAction="#handlePelangganMode"
                    style="-fx-background-color: #43A047; -fx-text-fill: white;
                           -fx-font-size: 14px; -fx-padding: 10 20;" />

        </children>
    </VBox>
</AnchorPane>
